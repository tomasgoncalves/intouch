                        <form role="form" action="" method="POST" id="contactform">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <!-- Form-->
                                <div class="form-group">
                                    <input type="text" name="nome" class="form-control" id="nome" placeholder="{% trans %}name{% endtrans %}">
                                    <span class="error" id="invalid_nome">*</span>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="telefone" class="form-control telefone" id="telefone" placeholder="{% trans %}contact{% endtrans %}">
                                    <span class="error" id="invalid_telefone">*</span>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="email" class="form-control" id="email" placeholder="Email">
                                    <span class="error" id="invalid_email">*</span>
                                    <span class="error" id="invalid_email_sintaxe2">**</span>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="assunto" class="form-control" id="assunto" placeholder="{% trans %}sub{% endtrans %}">
