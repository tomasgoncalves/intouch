<!-- SLIDER -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="carousel-generic" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="homepage-hero-module imgSlider">
                            <div class="video-container">
                                <div class="filter">
                                </div>
                                <!--Video of banner pages -->
                                <div style="background-color:rgba(33, 64, 154, 0.65);position:absolute; width:100%; height:100%;z-index:9">
                                </div>    
                                <video autoplay loop class="fillWidth">
                                    <source alt="rendimento mensal garantido" src="{{asset('video/Mock-up.mp4')}}" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
                                    <source  src="{{asset('video/Mock-up.m4v')}}" type="video/m4v" />Your browser does not support the video tag. I suggest you upgrade your browser.
                                    <source  src="{{asset('video/Mock-up.webm')}}" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
                                    <source  src="{{asset('video/Mock-up.ogg')}}" type="video/ogg" />Your browser does not support the video tag. I suggest you upgrade your browser.
                                    <source  src="{{asset('video/Mock-up.ogv')}}" type="video/ogv" />Your browser does not support the video tag. I suggest you upgrade your browser.
                                </video>
                                <div class="poster hidden">
                                    <img class="imgSlider" style="height:100%!important" src="{{ asset('img/slidehome.png')}}" alt="rendimento mensal garantido">
                                </div>
                            </div>
                        </div>
                        <div class="carousel-caption container">
                            <h1 class="title-slider">{% trans %}presence{% endtrans %}<br>{% trans %}internet{% endtrans %} <span class="textUnderlineBigSize">{% trans %}here{% endtrans %}.</span></h1>
                            <hr class="textUnderline ">
                            <h2 class="desc-slider"><p></p></h2>
                            <a class="page-scroll" href="#firstSection"><img src="{{ asset('img/setaBottom.png')}}" class="setaBottom" alt="rendimento mensal garantido"></a>
                        </div>
                        
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
	<section>
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<h1 class="tituloCinza">{% trans %}accommodation{% endtrans %}</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<h1 class="tituloBold">{% trans %}title{% endtrans %}</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<p>{% trans %}title{% endtrans %}</p>
			</div>
		</div>

		{% for array in accomodation %}
		{% set a = 'accomodation_' ~ loop.index0 ~ '.img'  %}
		{% set b = 'accomodation_' ~ loop.index0 ~ '.title'  %}
		{% set c = 'accomodation_' ~ loop.index0 ~ '.subtitle'  %}
		<div class="row">
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 paddingServicos">
				<div class="servicosHome servicosPUV" style="background-image: url('{{ a|trans }}');">
					<div class="servicosHomeHover">
						<div class="row containerServicosHome">
							<div class="wrapper efectLogo">
								<i class="fa fa-server icon-style"></i>
							</div>

							<h4 class="servicosColorText servicosHomeTitle">{{ b|trans }}</h4>
							<p class="servicosColorText  servicosHomeText">{{ c|trans }}</p>
						</div>
					</div>

					<div class="servicosHomeHoverAmarelo  servicosHomeHoverVerde">
						<div class="containerServicosHomeSeta">
							<img src="http://intouchbiz.com/template/setaService.png" class="setaService" alt="integração loja online web design">
						</div>
					</div>
				</div>
			</div>	
			{% endfor %}			
		</div>
		</div>
	</section>
</div>

